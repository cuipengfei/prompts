{
  "description": "桌面通知 - WebSocket 推送到浏览器（支持 WSL/Docker/容器环境）",
  "hooks": {
    "Stop": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "bun ${CLAUDE_PLUGIN_ROOT}/hooks/notify.ts Stop",
            "timeout": 5
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "bun ${CLAUDE_PLUGIN_ROOT}/hooks/notify.ts Notification",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
